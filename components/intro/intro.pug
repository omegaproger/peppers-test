mixin item(content, param)
  a.intro__menu-item&attributes(content.attr)&attributes(attributes)!=content.title

mixin intro__back(content,param)
  .intro__back
    +picture(content)

mixin intro__image-man(content,param)
  .intro__image-man
    +picture(content)

mixin intro__image-table(content,param)
  .intro__image-table
    +picture(content)
    

mixin intro__image-smoke(content,param)
  each item in content.smokeImages
    .intro__image-smoke&attributes(item.attr)&attributes(attributes)
        +picture(item)
        +picture(item)
        +picture(item)
        +picture(item)
        +picture(item)

mixin intro__info(content, param)
  .intro__info
    h3.intro__info-title!= content.title
      span!= content.span
    strong.intro__info-subtitle!= content.subTitle
    .intro__info-note
      span!= content.note
    +button({tag:"a", text:"Участвовать", attr:{href:"https://www.stoloto.ru/ruslotto/game/?int=right", target:"_blank"}}).intro__info-button

mixin intro__transition(content,param)
  .intro__transition  
    a.intro__transition&attributes(attributes)&attributes(content.attr)
      .intro__btn-transition!=content.text
        img&attributes(content.img)

mixin intro__logo(content,param)
  a.intro__logo&attributes(attributes)&attributes(content.attr)
    img&attributes(content.img)       

