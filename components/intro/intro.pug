mixin intro(content, param)
  section.intro(id="intro")
    +intro__back(introContent.bg)
    .intro__bg
      +intro__image-man(introContent.man)
      +intro__image-table(introContent.table)
      // img(src="images/intro/smoke.png").intro__image-smoke
      // img(src="images/intro/smoke2.png").intro__image-smoke_2
      +intro__image-smoke(introContent)
    .intro__content
      header.intro__header
        +intro__logo(introContent.logo)
        nav.menu.intro__menu
          each item in introContent.menu
            +item(item)
      .intro__body
        // ul.pagination
        +intro__info(introContent.info)
      +intro__transition(introContent.transition)
